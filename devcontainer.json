{
    "name": "C++ Development",
    "image": "ubuntu:latest",
    "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "postCreateCommand": "apt-get update && apt-get install -y gcc g++ make cmake libboost-all-dev ninja-build"
}